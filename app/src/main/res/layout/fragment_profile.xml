<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/border_card"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAkun"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/akun"
            android:layout_margin="10dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textEmployeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:src="@drawable/border_box" />

            <TextView
                android:id="@+id/textJobGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Grade"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/cyan" />

            <TextView
                android:id="@+id/textEmployeeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K0XXXX"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/cyan" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/menuDataLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person_black"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Data Lengkap"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuDataKeluarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_family"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Data Keluarga"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuRiwayatJabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_up"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Riwayat Jabatan"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuRiwayatPendidikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_pendidikan"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Riwayat Pendidikan"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuPengalamanKerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_business"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Pengalaman Kerja"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuPelatihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_class"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Pelatihan"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_file"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="File"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuTunjanganPotongan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_allowance"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Tunjangan &amp; Potongan"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuCuti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_weekend"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Cuti"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_info"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="About"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />

            <LinearLayout
                android:id="@+id/menuLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_exit"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Log out"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:src="@color/cyan" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
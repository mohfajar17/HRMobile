<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/spklTextNo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/spklTextKaryawan"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/spklTextPosisi"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/spklTextTglLembur"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/spklTextStartTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/spklTextFinishTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/spklTextDescription"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/spklTextApproval1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/spklTextApproval2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>
</LinearLayout>